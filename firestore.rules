rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ HELPER FUNCTIONS ============
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidExpense() {
      let data = request.resource.data;
      return data.keys().hasAll(['userId', 'amount', 'merchant', 'date'])
          && data.amount is number 
          && data.amount > 0
          && data.merchant is map
          && data.merchant.name is string;
    }
    
    function isValidGoal() {
      let data = request.resource.data;
      return data.keys().hasAll(['userId', 'name', 'targetAmount'])
          && data.name is string
          && data.targetAmount is number
          && data.targetAmount > 0;
    }
    
    // ============ FRIEND REQUESTS (top-level) ============
    
    match /friend_requests/{requestId} {
      allow read: if isAuthenticated() 
                  && (resource.data.fromUserId == request.auth.uid 
                      || resource.data.toUserId == request.auth.uid);
      
      allow create: if isAuthenticated() 
                    && request.resource.data.fromUserId == request.auth.uid;
      
      allow update: if isAuthenticated() 
                    && resource.data.toUserId == request.auth.uid;
      
      allow delete: if isAuthenticated() 
                    && (resource.data.fromUserId == request.auth.uid 
                        || resource.data.toUserId == request.auth.uid);
    }
    
    // ============ GROUP CHALLENGES (top-level) ============
    
    match /group_challenges/{challengeId} {
      allow read: if isAuthenticated() 
                  && request.auth.uid in resource.data.participants;
      
      allow create: if isAuthenticated() 
                    && request.auth.uid in request.resource.data.participants;
      
      allow update: if isAuthenticated() 
                    && request.auth.uid in resource.data.participants;
      
      allow delete: if isAuthenticated() 
                    && resource.data.createdBy == request.auth.uid;
    }

    // ============ PUBLIC PROFILES (NEW - SAFE DATA) ============
    // This collection holds only safe data: displayName, photoURL, stats, gamification
    match /public_profiles/{userId} {
      // Any authenticated user can read public profiles (for leaderboards, friends)
      allow read: if isAuthenticated();
      
      // Only the user can update their own public profile
      allow write: if isOwner(userId);
    }

    // ============ USERS COLLECTION (SECURED - PRIVATE DATA) ============
    
    match /users/{userId} {
      // STRICT: Only owner can read their full profile (email, subscription etc.)
      allow read: if isOwner(userId);
      
      // Update/Create/Delete own profile
      allow write: if isOwner(userId);
      
      // ============ EXPENSES SUBCOLLECTION ============
      
      match /expenses/{expenseId} {
        allow read: if isOwner(userId);
        
        allow create: if isOwner(userId) 
                      && isValidExpense()
                      && request.resource.data.userId == userId;
                      
        // Added validation on Update as well!
        allow update: if isOwner(userId)
                      && isValidExpense()
                      && request.resource.data.userId == userId;
        
        allow delete: if isOwner(userId);
      }
      
      // ============ GOALS SUBCOLLECTION ============
      
      match /goals/{goalId} {
        allow read: if isOwner(userId);
        
        allow create: if isOwner(userId) 
                      && isValidGoal()
                      && request.resource.data.userId == userId;
        
        allow update: if isOwner(userId)
                      && request.resource.data.userId == userId;
        
        allow delete: if isOwner(userId);
      }
      
      // ============ REPORTS SUBCOLLECTION ============
      
      match /reports/{reportId} {
        allow read: if isOwner(userId);
        allow write: if false; // Only Cloud Functions
      }
      
      // ============ SECURITY EVENTS ============
      
      match /securityEvents/{eventId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if false;
      }
      
      // ============ BUDGETS ============
      
      match /budgets/{budgetId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // ============ GAMIFICATION ============
      
      match /gamification/{docId} {
        allow read: if isOwner(userId);
        allow create, update: if isOwner(userId);
        allow delete: if false;
      }
      
      // ============ CHALLENGES ============
      
      match /challenges/{challengeId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ RECURRING EXPENSES ============
      
      match /recurringExpenses/{expenseId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ FRIENDS ============
      
      match /friends/{friendId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ NOTIFICATIONS ============
      
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ CATEGORY RULES ============
      
      match /categoryRules/{ruleId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ CATEGORY FEEDBACK ============
      
      match /categoryFeedback/{feedbackId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ ACTIVE CHALLENGES ============
      
      match /activeChallenges/{challengeId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ SNBL GOALS ============
      
      match /snbl_goals/{goalId} {
        allow read, write: if isOwner(userId);
      }
      
      // ============ IMPULSE LOCKS ============
      
      match /impulse_locks/{lockId} {
        allow read, write: if isOwner(userId);
      }

      // ============ TRANSACTION EVENTS ============
      
      match /transaction_events/{eventId} {
        allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
      }
  }
}
