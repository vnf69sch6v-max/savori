rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ HELPER FUNCTIONS ============
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidExpense() {
      let data = request.resource.data;
      return data.keys().hasAll(['userId', 'amount', 'merchant', 'date'])
          && data.amount is number 
          && data.amount > 0
          && data.merchant is map
          && data.merchant.name is string;
    }
    
    function isValidGoal() {
      let data = request.resource.data;
      return data.keys().hasAll(['userId', 'name', 'targetAmount'])
          && data.name is string
          && data.targetAmount is number
          && data.targetAmount > 0;
    }
    
    // ============ FRIEND REQUESTS (top-level) ============
    
    match /friend_requests/{requestId} {
      // Can read if you are sender or recipient
      allow read: if isAuthenticated() 
                  && (resource.data.fromUserId == request.auth.uid 
                      || resource.data.toUserId == request.auth.uid);
      
      // Can create if you are the sender
      allow create: if isAuthenticated() 
                    && request.resource.data.fromUserId == request.auth.uid;
      
      // Can update (accept/reject) only if you are the recipient
      allow update: if isAuthenticated() 
                    && resource.data.toUserId == request.auth.uid;
      
      // Can delete if you are sender or recipient
      allow delete: if isAuthenticated() 
                    && (resource.data.fromUserId == request.auth.uid 
                        || resource.data.toUserId == request.auth.uid);
    }
    
    // ============ GROUP CHALLENGES (top-level) ============
    
    match /group_challenges/{challengeId} {
      // Can read if you are a participant
      allow read: if isAuthenticated() 
                  && request.auth.uid in resource.data.participants;
      
      // Can create if you are included as a participant
      allow create: if isAuthenticated() 
                    && request.auth.uid in request.resource.data.participants;
      
      // Can update if you are a participant
      allow update: if isAuthenticated() 
                    && request.auth.uid in resource.data.participants;
      
      // Only creator can delete
      allow delete: if isAuthenticated() 
                    && resource.data.createdBy == request.auth.uid;
    }

    // ============ USERS COLLECTION ============
    
    match /users/{userId} {
      // Read own profile fully
      allow read: if isOwner(userId);
      
      // Allow reading limited public data for social features (leaderboard, friend search)
      // This allows reading displayName, photoURL, email, gamification for any authenticated user
      allow get: if isAuthenticated();
      
      // Create own profile
      allow create: if isAuthenticated() 
                    && isOwner(userId)
                    && request.resource.data.id == userId;
      
      // Update own profile (except subscription - only server can update)
      allow update: if isOwner(userId);
      
      // Delete own profile
      allow delete: if isOwner(userId);
      
      // ============ EXPENSES SUBCOLLECTION ============
      
      match /expenses/{expenseId} {
        allow read: if isOwner(userId);
        
        allow create: if isOwner(userId) 
                      && isValidExpense()
                      && request.resource.data.userId == userId;
        
        allow update: if isOwner(userId)
                      && request.resource.data.userId == userId;
        
        allow delete: if isOwner(userId);
      }
      
      // ============ GOALS SUBCOLLECTION ============
      
      match /goals/{goalId} {
        allow read: if isOwner(userId);
        
        allow create: if isOwner(userId) 
                      && isValidGoal()
                      && request.resource.data.userId == userId;
        
        allow update: if isOwner(userId)
                      && request.resource.data.userId == userId;
        
        allow delete: if isOwner(userId);
      }
      
      // ============ REPORTS SUBCOLLECTION ============
      
      match /reports/{reportId} {
        // Users can read their own reports
        allow read: if isOwner(userId);
        
        // Only Cloud Functions can write reports (no client writes)
        allow write: if false;
      }
      
      // ============ SECURITY EVENTS SUBCOLLECTION ============
      
      match /securityEvents/{eventId} {
        // Users can read their own security events
        allow read: if isOwner(userId);
        
        // Users can create security events for themselves
        allow create: if isOwner(userId);
        
        // Security events cannot be updated or deleted (audit trail)
        allow update, delete: if false;
      }
      
      // ============ BUDGETS SUBCOLLECTION ============
      
      match /budgets/{budgetId} {
        // Users can read their own budgets
        allow read: if isOwner(userId);
        
        // Users can create and update their own budgets
        allow create, update: if isOwner(userId)
                              && request.resource.data.userId == userId;
        
        // Users can delete their own budgets
        allow delete: if isOwner(userId);
      }
      
      // ============ GAMIFICATION SUBCOLLECTION ============
      
      match /gamification/{docId} {
        // Users can read their own gamification data
        allow read: if isOwner(userId);
        
        // Users can create and update their own progress
        allow create, update: if isOwner(userId);
        
        // Gamification data cannot be deleted
        allow delete: if false;
      }
      
      // ============ CHALLENGES SUBCOLLECTION ============
      
      match /challenges/{challengeId} {
        // Users can read their own challenges
        allow read: if isOwner(userId);
        
        // Users can create and update their challenges
        allow create, update: if isOwner(userId);
        
        // Users can delete (abandon) challenges
        allow delete: if isOwner(userId);
      }
      
      // ============ RECURRING EXPENSES SUBCOLLECTION ============
      
      match /recurringExpenses/{expenseId} {
        // Users can read their own recurring expenses
        allow read: if isOwner(userId);
        
        // Users can create and update their recurring expenses
        allow create, update: if isOwner(userId);
        
        // Users can delete their recurring expenses
        allow delete: if isOwner(userId);
      }
      
      // ============ FRIENDS SUBCOLLECTION ============
      
      match /friends/{friendId} {
        // Users can read their own friends list
        allow read: if isOwner(userId);
        
        // Friends are added via batch writes (friend_requests acceptance)
        allow create, update: if isOwner(userId);
        
        // Users can remove friends
        allow delete: if isOwner(userId);
      }
      
      // ============ NOTIFICATIONS SUBCOLLECTION ============
      
      match /notifications/{notificationId} {
        // Users can read their own notifications
        allow read: if isOwner(userId);
        
        // Users can create notifications for themselves
        allow create: if isOwner(userId);
        
        // Users can mark notifications as read
        allow update: if isOwner(userId);
        
        // Users can delete their notifications
        allow delete: if isOwner(userId);
      }
      
      // ============ CATEGORY RULES SUBCOLLECTION ============
      
      match /categoryRules/{ruleId} {
        // Users can manage their own category rules
        allow read, write: if isOwner(userId);
      }
      
      // ============ CATEGORY FEEDBACK SUBCOLLECTION ============
      
      match /categoryFeedback/{feedbackId} {
        // Users can manage their own category feedback
        allow read, write: if isOwner(userId);
      }
      
      // ============ ACTIVE CHALLENGES SUBCOLLECTION ============
      
      match /activeChallenges/{challengeId} {
        // Users can manage their own active challenges
        allow read, write: if isOwner(userId);
      }
      // ============ SNBL GOALS SUBCOLLECTION ============
      
      match /snbl_goals/{goalId} {
        // Users can manage their own SNBL goals
        allow read, write: if isOwner(userId);
      }
      
      // ============ IMPULSE LOCKS SUBCOLLECTION ============
      
      match /impulse_locks/{lockId} {
        // Users can manage their own impulse locks
        allow read, write: if isOwner(userId);
      }

      // ============ TRANSACTION EVENTS SUBCOLLECTION (IMMUTABLE LOG) ============
      
      match /transaction_events/{eventId} {
        allow read: if isOwner(userId);
        // Only allow creation, no updates or deletes (append-only log)
        allow create: if isOwner(userId);
        allow update, delete: if false;
      }
  }
}
